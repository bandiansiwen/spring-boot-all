<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imp.all.shardingsphere.dao.StudentDao">

    <sql id="Base_Column_List">
        name, user_id, created_at, updated_at
    </sql>

    <select id="getStudentByUserId" parameterType="java.lang.Long" resultType="com.imp.all.shardingsphere.entity.Students">
        select
        <include refid="Base_Column_List" />
        from students where user_id=#{userId}
    </select>

    <select id="getStudentById" parameterType="java.lang.Long" resultType="com.imp.all.shardingsphere.entity.Students">
        select
        <include refid="Base_Column_List" />
        from students where id=#{id}
    </select>

    <select id="getStudentByUserIdAndId" resultType="com.imp.all.shardingsphere.entity.Students">
        select
        <include refid="Base_Column_List" />
        from students where id=#{id} and user_id=#{userId}
    </select>

    <select id="getList" resultType="com.imp.all.shardingsphere.entity.Students">
        select
        <include refid="Base_Column_List" />
        from students order by created_at desc limit 2, 10
    </select>
</mapper>